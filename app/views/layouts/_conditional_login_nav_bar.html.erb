<div class="navbar">
<% if flash[:notices] %>
    <%= flash[:notices] %>
<% end %>
<ul>
<% if current_user %>
    <li>Hi <%= current_user.username %></li>

    <%= form_tag(signout_path, method: "delete") do %>
        <li><%= button_tag('logout', class: "navbar_logout") %></li>
      <% end %>
      
      <%= form_tag(new_question_path, method: "get", ) do %>
        <li><%= button_tag('create question', class: "navbar_create") %></li>
      <%end%>

      <%= form_tag(user_path(current_user), method:"get") do %>
        <li><%= button_tag('my profile page', class: "navbar_profile") %></li>
      <% end %>

      <% unless index_page? %>
      <%= link_to( "Home", root_path ) %>
      <% end %>

   

<% else %>

  <%= form_tag ("/signin")  do %>
    <%=  label_tag("username") %>
    <%=  text_field_tag("username") %>
    <%=  label_tag("password") %>
    <%=  password_field_tag("password") %>
    <%= submit_tag("signin") %>
  <% end %>

  <%= link_to "Sign up", new_user_path %>

<% end %>

</ul>
</div>

