<h2><%= @question.title %></h2>
<p><strong><%= @question.content %></strong></p>

<% @question_comments.each do |comment| %>
  <%= comment.content %><br>
<% end %>
<%= form_tag("/questions/#{@question.id}/comments/new", method: "get") do%>
  <%= button_tag('comment on this question') %>
<% end %><br><br><br><br><br><br>


<% @answers.each do |answer| %>
  <%= Vote.where(votable_id: answer.id).count %>  <strong><%= answer.content %></strong><br><br>

  <% Comment.where(commentable_id: answer.id).where(commentable_type: "Answer").each do |comment| %>
    <%= comment.content %><br>
  <% end %><br>
  <%= form_tag("/questions/#{@question.id}/answers/#{answer.id}/comments/new", method: "get") do%>
    <%= button_tag('comment on this answer') %>
    <% end %><br><br>
<% end %>