<% if current_user %>
  <%if vote = current_vote(votable) %>
    <%= form_for vote, url: send("#{votable.class.to_s.downcase}_vote_path", votable, vote), html: { class: "edit_#{votable.class.to_s.downcase}_#{up_down}" } do |f| %>
      <%= f.hidden_field(:up_down, value: vote_boolean) %>
      <%= f.submit "#{up_down}" %>
    <% end %>
  <% else %>
    <%= form_for new_vote, url: send("#{votable.class.to_s.downcase}_votes_path", votable, new_vote), html: { class: "new_#{votable.class.to_s.downcase}_#{up_down}" } do |f| %>
      <%= f.hidden_field(:votable_id, value: votable.id) %>
      <%= f.hidden_field(:votable_type, value: votable.class ) %>
      <%= f.hidden_field(:up_down, value: vote_boolean) %>
      <%= f.submit "#{up_down}" %>
    <% end %>
  <% end %>
<% end %>
